{
  "name": "momentum-gui",
  "version": "1.0.0",
  "description": "Electron GUI for Momentum Project Management CLI",
  "main": "main/index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.2.2",
    "electron": "^39.2.7",
    "electron-builder": "^25.1.8",
    "vite": "^7.3.0",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.momentum.gui",
    "productName": "Momentum",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main/**/*",
      "preload.js",
      "renderer-dist/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    }
  }
}
